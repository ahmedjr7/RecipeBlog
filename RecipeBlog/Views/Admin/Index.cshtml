@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-8 grid-margin">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <p class="card-title">Sales Report</p>
                    <a href="#" class="text-info">View all</a>
                </div>
                <p class="font-weight-500">The total number of sessions within the date range.</p>
                <div id="sales-legend" class="chartjs-legend mt-4 mb-2"></div>
                <canvas id="sales-chart"></canvas>
            </div>
        </div>
    </div>
    <div class="col-md-4 grid-margin">
        <div class="row">
            <div class="col-md-12 mb-4 stretch-card transparent">
                <div class="card card-tale">
                    <div class="card-body">
                        <p class="mb-4">Registered Users</p>
                        <p class="fs-30 mb-2">@ViewBag.RegisteredUserCount</p>
                    </div>
                </div>
            </div>
            <div class="col-md-12 mb-4 stretch-card transparent">
                <div class="card card-dark-blue">
                    <div class="card-body">
                        <p class="mb-4">Registered Chefs</p>
                        <p class="fs-30 mb-2">@ViewBag.RegisteredChefCount</p>
                    </div>
                </div>
            </div>
            <div class="col-md-12 mb-4 stretch-card transparent">
                <div class="card card-light-blue">
                    <div class="card-body">
                        <p class="mb-4">Number of Recipes</p>
                        <p class="fs-30 mb-2">@ViewBag.RecipeCount</p>
                    </div>
                </div>
            </div>
            <div class="col-md-12 stretch-card transparent">
                <div class="card card-light-danger">
                    <div class="card-body">
                        <p class="mb-4">Today's Sales</p>
                        <p class="fs-30 mb-2">47033</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-title mb-0">Top Products</p>
                <div class="table-responsive">
                    <table class="table table-striped table-borderless">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Price</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.Recipes)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td class="font-weight-bold">@item.Price</td>
                                    <td>
                                        @if (item.Addedtime !=null)
                                        {
                                            @item.Addedtime
                                        }
                                        else
                                        {
                                            <text>Not Set</text>
                                        }
                                    </td>
                                    <td class="font-weight-medium">
                                        <div class="badge badge-warning">@item.Status.ToString()</div>
                                    </td>
                                    <td>
                                        <a asp-controller="Admin" asp-action="Approve" asp-route-id="@item.Recipeid" class="btn btn-success">Approve</a>
                                        <a asp-controller="Admin" asp-action="Reject" asp-route-id="@item.Recipeid" class="btn btn-danger">Reject</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

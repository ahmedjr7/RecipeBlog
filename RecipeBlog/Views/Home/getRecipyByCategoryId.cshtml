@model IEnumerable<RecipeBlog.Models.Recipe>

@{
    Layout = "~/Views/shared/_HomeLayout.cshtml";
}

<div class="container-xxl py-5 bg-dark hero-header mb-5">
    <div class="container text-center my-5 pt-5 pb-4">
        <h1 class="display-3 text-white mb-3 animated slideInDown">Our Category</h1>
    </div>
</div>

<div class="container-xxl pt-5 pb-3">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h5 class="section-title ff-secondary text-center text-primary fw-normal">Team Members</h5>
            <h1 class="mb-5">Our Recipes</h1>
        </div>
        <div class="row g-4">
            @foreach (var recipe in Model)
            {
                if (recipe.Status == Recipe.RecipeStatus.Approved) // Only show approved recipes
                {
                    <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                        <div class="team-item text-center rounded overflow-hidden">
                            <div class="rounded-circle overflow-hidden m-4">
                                <img class="img-fluid" src="@Url.Content("~/RecipeImages/" + recipe.Mainimage)" alt="Recipe Image" width="200" height="200">
                            </div>
                            <h5 class="mb-0">@recipe.Name</h5> <!-- Changed to show recipe name instead of description -->
                            <small>@recipe.Description</small> <!-- Description as the small text -->
                            <div class="d-flex justify-content-center mt-3">
                                <a class="btn btn-square btn-primary mx-1" href="#"><i class="fab fa-facebook-f"></i></a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
